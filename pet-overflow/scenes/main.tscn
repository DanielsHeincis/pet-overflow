script = SubResource("GDScript", "extends Node\n\nfunc _ready():\n\t# Register pet-object preferences\n\tvar object_registry = {\n\t\t\"Ball\": preload(\"res://scenes/objects/ball.tscn\"),\n\t\t\"Bath\": preload(\"res://scenes/objects/bath.tscn\"),\n\t\t\"Blanket\": preload(\"res://scenes/objects/blanket.tscn\"),\n\t\t\"FoodBowl\": preload(\"res://scenes/objects/food_bowl.tscn\"),\n\t\t\"Toy\": preload(\"res://scenes/objects/toy.tscn\"),\n\t}\n\t\n\t# Set the room variable in the room script\n\tif has_node(\"World/Pudio\"):\n\t\tvar room = get_node(\"World/Pudio\")\n\t\troom.object_scenes = object_registry\n\t\n\t# Spawn initial objects\n\tspawn_initial_objects()\n\nfunc spawn_initial_objects():\n\t# Get the room node\n\tvar room = get_node(\"World/Pudio\")\n\t\n\t# Spawn one of each object type for testing\n\tvar object_types = [\"Ball\", \"Bath\", \"Toy\", \"FoodBowl\", \"Blanket\"]\n\t\n\t# Space them out across the room\n\tfor i in range(len(object_types)):\n\t\tvar object_scene = room.object_scenes[object_types[i]]\n\t\tvar obj = object_scene.instantiate()\n\t\t\n\t\t# Position evenly across room\n\t\tobj.position = Vector2(300 + i * 300, 300)\n\t\t\n\t\t# Add to room\n\t\troom.add_child(obj)\n\t\troom.active_objects.append(obj)\n\t\n\t# Spawn first pet after short delay\n\tawait get_tree().create_timer(2.0).timeout\n\troom.spawn_random_pet()\n")
